---
const { frontmatter } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{frontmatter.title}</title>
  </head>
  <body class="bg-black text-white font-sans leading-relaxed">
    <div class="max-w-3xl mx-auto px-6 py-8">
      <a href="/" class="text-sm text-blue-400 underline mb-4 inline-block">
        &larr; Back to main site
      </a>
      <h1 class="text-3xl font-bold mb-6">
        {frontmatter.heading}
      </h1>
      <div class="prose prose-invert prose-a:text-blue-400 prose-a:no-underline prose-a:hover:underline">
        <slot />
      </div>
    </div>
  </body>
</html>